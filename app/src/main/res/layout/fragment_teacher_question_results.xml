<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.uco.schambers.classmate.Fragments.TeacherQuestionResults">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- TODO: Update blank fragment layout -->

        <TextView
            android:id="@+id/question"
            android:textSize="23sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/choice01"
            android:layout_below="@+id/question"
            android:text="choice01"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/choice02"
            android:layout_below="@+id/choice01"
            android:text="choice02"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/choice03"
            android:layout_below="@+id/choice02"
            android:text="choice03"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/choice04"
            android:layout_below="@+id/choice03"
            android:text="choice04"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@+id/choice04"
            android:id="@+id/displayResultsButton"
            android:text="Display Results"
            />





    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lin02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_gravity="center">

        <TextView
            android:layout_alignParentLeft="true"
            android:id="@+id/colortext01"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:textSize="16sp"

            android:background="#4CA613"/>

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/colortext01Text"
            android:gravity="center"
            android:layout_above="@+id/colortext01"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/bottomText01"
            android:textSize="20dp"
            android:layout_below="@+id/colortext01"
            android:layout_marginTop="-25sp"
            android:gravity="center"
            />

        <TextView
            android:layout_toRightOf="@+id/colortext01"
            android:id="@+id/colortext02"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:textSize="16sp"
            android:background="#faff1e1c"/>

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/colortext02Text"
            android:layout_above="@+id/colortext02"
            android:layout_toEndOf="@+id/colortext01"
            android:layout_toRightOf="@+id/colortext01"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/bottomText02"
            android:textSize="20dp"
            android:layout_below="@+id/colortext02"
            android:layout_toEndOf="@id/colortext01"
            android:layout_marginTop="-25sp"
            android:gravity="center"
            />

        <TextView
            android:layout_toRightOf="@+id/colortext02"
            android:id="@+id/colortext03"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:textSize="16sp"
            android:background="#fa0c1eff"/>

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/colortext03Text"
            android:layout_above="@+id/colortext03"
            android:layout_toEndOf="@+id/colortext02"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/bottomText03"
            android:textSize="20dp"
            android:layout_below="@+id/colortext03"
            android:layout_toEndOf="@+id/colortext02"
            android:layout_marginTop="-25sp"
            android:gravity="center"
            />

        <TextView
            android:layout_toRightOf="@+id/colortext03"
            android:id="@+id/colortext04"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:textSize="16sp"
            android:background="#faffe204"
            />

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/colortext04Text"
            android:layout_above="@+id/colortext04"
            android:layout_toEndOf="@+id/colortext03"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/bottomText04"
            android:textSize="20dp"
            android:layout_below="@+id/colortext04"
            android:layout_toEndOf="@+id/colortext03"
            android:layout_marginTop="-25sp"
            android:gravity="center"
            />

    </RelativeLayout>

</FrameLayout>
